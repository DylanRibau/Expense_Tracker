@model Expense_Tracker.Data.SavingGoalView

@{
    ViewData["Title"] = "Index";
}

@if (Model.AccessingUser == Model.SavingsGoalUser)
{
    <h1>Saving Goals</h1>
}
else
{
    <h1>@Model.SavingsGoalUser.UserName's Saving Goals</h1>
}

@if(Model.AccessingUser == Model.SavingsGoalUser){
    <p>
        <a asp-action="Create">Add New Goal</a>
    </p>
}

<table class="table table-borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Goals.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals.FirstOrDefault().Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals.FirstOrDefault().AmountSaved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Goals.FirstOrDefault().EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Goals)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AmountSaved)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndDate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                    @if (Model.SavingsGoalUser == Model.AccessingUser)
                    {
                        @Html.DisplayName("|");
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    }
                </td>
            </tr>
            <tr>
                <td colspan="6">
                    <div id="Progress">
                        <div id="ProgressBar" style="width:@(item.PercentageComplete + "%")">
                            @(item.PercentageComplete + "%")
                        </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
