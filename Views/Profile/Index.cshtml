@model Expense_Tracker.Data.ApplicationUser
@{
    ViewData["Title"] = "Index";
}

<style>
    .text-center,.row{
        margin-bottom: 10px;
    }
</style>

<h1>Profile</h1>

<div class="text-center">
    <div>
        @Html.DisplayName("Profile Visibility"):
        @if (Model.IsPublic)
        {
            @Html.DisplayName("Public")
        }
        else
        {
            @Html.DisplayName("Private")
        }
    </div>
    <div>
        <a class="btn btn-secondary" asp-action="ChangeVisibility">
            @if (Model.IsPublic)
            {
                @Html.DisplayName("Change to Private")
            }
            else
            {
                @Html.DisplayName("Change to Public")
            }
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <a class="btn btn-primary" asp-area="" asp-controller="Sheets" asp-action="Index">Sheets</a>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card">
            <a class="btn btn-primary" asp-area="" asp-controller="SavingGoals" asp-action="Index">Saving Goals</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <a class="btn btn-primary" asp-area="" asp-controller="UserConnections" asp-action="Index">Profile Visibility</a>
        </div>
    </div>

    <div class="col-sm-6">
        <div class="card">
            <a class="btn btn-primary" asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a>
        </div>
    </div>
</div>

